{
    "info": {
      "name": "Order & Payment Management API",
      "_postman_id": "a6b47c3d-5e67-4a0c-bb14-9a56e2f31a77",
      "description": "Laravel 10 API for managing orders and payments (with JWT Auth + Strategy Pattern)",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Auth",
        "item": [
          {
            "name": "Register",
            "request": {
              "method": "POST",
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password\",\n  \"password_confirmation\": \"password\"\n}"
              },
              "url": { "raw": "{{base_url}}/api/v1/auth/register" }
            }
          },
          {
            "name": "Login",
            "request": {
              "method": "POST",
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password\"\n}"
              },
              "url": { "raw": "{{base_url}}/api/v1/auth/login" }
            }
          },
          {
            "name": "Logout",
            "request": {
              "method": "POST",
              "header": [
                { "key": "Content-Type", "value": "application/json" },
                { "key": "Authorization", "value": "Bearer {{token}}" }
              ],
              "url": { "raw": "{{base_url}}/api/v1/auth/logout" }
            }
          }
        ]
      },
      {
        "name": "Orders",
        "item": [
          {
            "name": "Create Order",
            "request": {
              "method": "POST",
              "header": [
                { "key": "Content-Type", "value": "application/json" },
                { "key": "Authorization", "value": "Bearer {{token}}" }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"customer_name\": \"John Doe\",\n  \"status\": \"pending\",\n  \"items\": [\n    {\"product_name\": \"Keyboard\", \"quantity\": 1, \"price\": 50},\n    {\"product_name\": \"Mouse\", \"quantity\": 2, \"price\": 25}\n  ]\n}"
              },
              "url": { "raw": "{{base_url}}/api/v1/orders" }
            }
          },
          {
            "name": "Update Order (confirm)",
            "request": {
              "method": "PUT",
              "header": [
                { "key": "Content-Type", "value": "application/json" },
                { "key": "Authorization", "value": "Bearer {{token}}" }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"status\": \"confirmed\"\n}"
              },
              "url": { "raw": "{{base_url}}/api/v1/orders/1" }
            }
          },
          {
            "name": "View All Orders",
            "request": {
              "method": "GET",
              "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
              "url": { "raw": "{{base_url}}/api/v1/orders" }
            }
          },
          {
            "name": "View Orders by Status",
            "request": {
              "method": "GET",
              "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
              "url": { "raw": "{{base_url}}/api/v1/orders?status=confirmed" }
            }
          },
          {
            "name": "Delete Order",
            "request": {
              "method": "DELETE",
              "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
              "url": { "raw": "{{base_url}}/api/v1/orders/1" }
            }
          }
        ]
      },
      {
        "name": "Payments",
        "item": [
          {
            "name": "Process Payment (Mock Gateway)",
            "request": {
              "method": "POST",
              "header": [
                { "key": "Content-Type", "value": "application/json" },
                { "key": "Authorization", "value": "Bearer {{token}}" }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"method\": \"mock\"\n}"
              },
              "url": { "raw": "{{base_url}}/api/v1/orders/1/payments" }
            }
          },
          {
            "name": "Process Payment (Fail Gateway)",
            "request": {
              "method": "POST",
              "header": [
                { "key": "Content-Type", "value": "application/json" },
                { "key": "Authorization", "value": "Bearer {{token}}" }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"method\": \"fail\"\n}"
              },
              "url": { "raw": "{{base_url}}/api/v1/orders/1/payments" }
            }
          },
          {
            "name": "View All Payments",
            "request": {
              "method": "GET",
              "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
              "url": { "raw": "{{base_url}}/api/v1/payments" }
            }
          },
          {
            "name": "View Payments for Order",
            "request": {
              "method": "GET",
              "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
              "url": { "raw": "{{base_url}}/api/v1/orders/1/payments" }
            }
          }
        ]
      }
    ],
    "variable": [
      { "key": "base_url", "value": "http://127.0.0.1:8000" },
